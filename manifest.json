{
  "manifest_version": 3,
  "name": "READefine",
  "version": "1.0",
  "description": "Accessibility tool for dyslexic readers.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
       "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "read-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Read the selected text aloud"
    }
  }
}
